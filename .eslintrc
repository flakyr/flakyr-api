{
	"parser": "@typescript-eslint/parser",
	"env": {
		"node": true,
		"es2020": true,
		"mocha": true
	},
	"plugins": [
		"prettier",
		"mocha",
		"@typescript-eslint"
	],
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"prettier/@typescript-eslint",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"rules": {
		"no-var": "error",
		"indent": [
			"error",
			4
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"newline-before-return": "error"
	}
}